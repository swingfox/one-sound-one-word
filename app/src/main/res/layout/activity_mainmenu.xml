<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:weightSum="0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="0.13"
            android:gravity="right"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imgSettings"
                android:layout_width="67dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/settings" />

            <ImageView
                android:id="@+id/imgReset"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.02"
                app:srcCompat="@drawable/reset" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imgSettings"
            android:layout_weight="0.34"
            app:srcCompat="@drawable/game" />

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/imgLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_weight="0.06"
            android:background="@drawable/play" />

        <Button
            android:id="@+id/btnVocabulary"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/btnPlay"
            android:layout_alignStart="@+id/btnPlay"
            android:layout_below="@+id/btnPlay"
            android:layout_marginTop="10dp"
            android:layout_weight="0.08"
            android:background="@drawable/vocabulary" />

        <Button
            android:id="@+id/btnInstructions"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_above="@+id/btnQuit"
            android:layout_alignEnd="@+id/btnVocabulary"
            android:layout_alignLeft="@+id/btnVocabulary"
            android:layout_alignRight="@+id/btnVocabulary"
            android:layout_alignStart="@+id/btnVocabulary"
            android:layout_below="@+id/btnVocabulary"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/instructions" />

        <Button
            android:id="@+id/btnQuit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/btnVocabulary"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btnVocabulary"
            android:layout_marginBottom="17dp"
            android:background="@drawable/quit" />
    </LinearLayout>

</RelativeLayout>
